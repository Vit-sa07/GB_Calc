<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Gb_calculatorLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <item name="myNumberButtonColor">@color/gray</item>
        <item name="myOperationsButtonColor">@color/orange</item>
        <item name="myAcButtonColor">@color/light_grey</item>
    </style>

    <style name="Theme.Gb_calculatorDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <item name="myNumberButtonColor">@color/dark_grey</item>
        <item name="myOperationsButtonColor">@color/dark_orange</item>
        <item name="myAcButtonColor">@color/purple_200</item>
    </style>

    <style name="CalcNumberBtnStyle">
        <item name="android:layout_width">@dimen/calc_btn_width</item>
        <item name="android:layout_height">@dimen/calc_btn_height</item>
        <item name="android:layout_margin">@dimen/calc_btn_margin</item>
        <item name="android:layout_weight">@dimen/calc_btn_weight</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">@dimen/calc_btn_corner_radius</item>
        <item name="backgroundTint">?attr/myNumberButtonColor</item>
    </style>

    <style name="CalcNumberBtnStyle.OperationsBtn">
        <item name="backgroundTint">?attr/myOperationsButtonColor</item>
    </style>

    <style name="CalcNumberBtnStyle.AcBtn">
        <item name="backgroundTint">?attr/myAcButtonColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">@dimen/calc_btn_weight_zero</item>

    </style>
</resources>
